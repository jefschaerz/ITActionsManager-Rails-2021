<p id="notice"><%= notice %></p>

<h1>Equipment types</h1>
<p>
<%if isAdmin?%>
<%= link_to 'New Equipment Type', new_equipment_type_path, :class => "btn btn-outline-success" %>
<%end%>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment_types.each do |equipment_type| %>
      <tr>
        <td><%= equipment_type.id %></td>
        <td><%= equipment_type.description %></td>
        <% if isAdmin? %>
        <td><%= link_to 'Edit', edit_equipment_type_path(equipment_type) %></td>
        <!-- Not managed (On Delete CASACADE) <td><%= link_to 'Destroy', equipment_type, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
