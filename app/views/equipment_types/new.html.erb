<!-- Manage errors -->
<% if @equipment_type.errors.any? %>
<div class="alert alert-danger">
    <ul>
        <% @equipment_type.errors.full_messages.each do |message| %>
        <li> <%= message %></li>
        <%end%>
    </ul>
</div>
<%end%>

<div class="form mt-3">
    <h3>Add a new equipment type</h3>
    <%= simple_form_for @equipment_type do |f| %>
    <!-- User partial for editable field in both (new and edit) to avoid coding twice same part -->
    <%= render :partial => "form", :locals => { :f => f } %>
    <%end %>
</div>
