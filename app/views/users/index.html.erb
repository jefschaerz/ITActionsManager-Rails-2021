<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-3">
     <h3>Users</h3>
    </div>
  </div>
</div>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <!-- For debug to see how it looks like <th>Password digest</th-->
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <!-- For debug to see how it looks like td><%= user.password_digest %></td-->
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>        
        <td><%= user.role %></td>
        <% if isAdmin? %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <!-- Not managed (On Delete CASACADE) <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td -->
        <%end%>
      </tr>     
    <% end %>
  </tbody>
</table>
<%= pagy_bootstrap_nav(@pagy).html_safe%>

