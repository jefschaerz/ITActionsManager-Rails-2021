<!-- Manage errors -->
<% if @intervention.errors.any? %>
<div class="alert alert-danger">
    <ul>
        <% @intervention.errors.full_messages.each do |message| %>
        <li> <%= message %></li>
        <%end%>
    </ul>
</div>
<%end%>

<div class="form mt-3">
    <h3>Add a new intervention</h3>
    <%= simple_form_for @intervention do |f| %>
    <!-- Fields only editable in new -->
    <!-- User partial for editable field in both (new and edit) to avoid coding twice same part -->
    <%= render :partial => 'form', :locals => { :f => f } %>  
    <!--p>StatusState : <%= debug @statustypes.inspect %> </p-->
    <%end %>
</div>