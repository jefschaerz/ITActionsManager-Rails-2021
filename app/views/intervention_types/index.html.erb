<p id="notice"><%= notice %></p>

<h1>Intervention types</h1>
<p>
    <% if isAdmin? %>
    <%= link_to 'New Intervention Type', new_intervention_type_path, :class => "btn btn-outline-success" %>
    <%end%>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @intervention_types.each do |intervention_type| %>
        <tr>
            <td><%= intervention_type.id %></td>
            <td><%= intervention_type.description %></td>
            <% if isAdmin? %>
            <td><%= link_to 'Edit', edit_intervention_type_path(intervention_type) %></td>
            <td><%= link_to 'Destroy', intervention_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
        </tr>
        <% end %>
    </tbody>
</table>
