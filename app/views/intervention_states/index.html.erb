<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-3">
     <h3>Intervention states</h3>
    </div>
    <div class="col">
      <% if isAdmin? %>
      <%= link_to 'New Intervention State', new_intervention_state_path, :class => "btn btn-outline-success"  %>
      <%end%>
    </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intervention_states.each do |intervention_state| %>
      <tr>
        <td><%= intervention_state.id %></td>
        <td><%= intervention_state.description %></td>
        <% if isAdmin? %>
        <td><%= link_to 'Edit', edit_intervention_state_path(intervention_state) %></td>
        <!-- Not managed (On Delete CASACADE) <td><%= link_to 'Destroy', intervention_state, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

