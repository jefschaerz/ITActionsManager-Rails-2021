<p id="notice"><%= notice %></p>

<h1>Intervention States</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intervention_states.each do |intervention_state| %>
      <tr>
        <td><%= intervention_state.id %></td>
        <td><%= intervention_state.description %></td>
        <% if isAdmin? %>
        <td><%= link_to 'Edit', edit_intervention_state_path(intervention_state) %></td>
        <td><%= link_to 'Destroy', intervention_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Intervention State', new_intervention_state_path %>
