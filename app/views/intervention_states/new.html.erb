<!-- Manage errors -->
<% if @intervention_state.errors.any? %>
<div class="alert alert-danger">
    <ul>
        <% @intervention_state.errors.full_messages.each do |message| %>
        <li> <%= message %></li>
        <%end%>
    </ul>
</div>
<%end%>

<div class="form mt-3">
    <h3>Add a new intervention state</h3>

    <%= simple_form_for @intervention_state do |f| %>
    <!-- User partial for editable field in both (new and edit) to avoid coding twice same part -->
     <%= render :partial => "form", :locals => { :f => f } %>

    <%end %>
</div>