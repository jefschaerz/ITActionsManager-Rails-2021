<!DOCTYPE html>
<html>

<head>
    <title>ITActionsManagerRails2021</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

</head>

<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
        <div class="container">
            <a href="<%= root_path %>" class="nvabar-band">IT Actions Manager </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <% if user_signed_in? %>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="<%= interventions_path %>">Interventions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="<%= devices_path %>">Devices</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="<%= equipment_types_path %>">Equipment types</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="<%= intervention_types_path %>">Intervention types</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="<%= intervention_states_path %>">Intervention states</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="<%= intervention_states_path %>">Intervention states</a>
                    </li>

                    <%end%>

                </ul>
                <ul class="nav navbar-nav mb-2 mb-lg-0 navbar-right">
                    <!-- Users link visible ONLY for admin -->
                    <% if isAdmin? %>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="<%= users_path %>">Users (Admin only)</a>
                    </li>
                    <%end%>
                    <!-- Links visible ONLY if user not connected-->
                    <% if user_signed_in? %>
                    <span class="btn btn-sm btn-outline-warning my-2 my-sm-0 disabled"><%= truncate(current_user.lastname, length:10)%></span>
                    <li class="nav-item"><%= link_to 'Mon profil', profil_path, class:"nav-link" %></li>
                    <li class="nav-item"><%= link_to 'Se dÃ©connecter', destroy_session_path, data: {method: :delete}, class:"nav-link" %></li>
                    <%else%>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= new_user_path %>">S'inscrire</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= new_session_path %>">Se connecter</a>
                    </li>
                    <%end%>
                </ul>
            </div>
        </div>
        </div>
    </nav>

    <!-- Display Flash messages -->
    <div class="container">
        <% if flash[:success] %>
        <div class="alert alert-success">
            <%= flash[:success] %>
        </div>
        <% end %>

        <% if flash[:danger] %>
        <div class="alert alert-danger">
            <%= flash[:danger] %>
        </div>
        <% end %>

        <%= yield %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <!--%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %-->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</body>

</html>